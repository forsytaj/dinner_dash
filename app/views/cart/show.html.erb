<h1>Cart</h1>

<% if current_cart.empty? %>
  <p>Your cart is empty. <% link_to 'See the menu', menu_index_path %></p>
<% else %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Items</h3>
  </div>
  <ul class="list-group"> 

  <% current_cart.items.each do |item| %>
      <li class="list-group-item">
      <%= link_to item.title, item_path(item) %> 
      <span class="text-muted"><%= truncate item.description, length: 80 %></span>
      <span class="badge"><%= number_to_currency item.price %></span>
       ( <%= link_to 'Remove from Cart', remove_item_cart_path(item) %> )
      </li>
   <% end %>
  </ul>
</div>
<%= link_to 'Place Order', orders_path, method: :post, class: 'btn btn-primary' %>

<% end %>