<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<p>
  Description:
  <%= @category.description %>
</p>

<% if @category.items.any? %>
  <h2> Items </h2>
  <ul> 
    <% @category.items.each do |item| %>
        <%= content_tag :li, link_to(item.title, item_path(item)) %>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
